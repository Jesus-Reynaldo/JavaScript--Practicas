{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["standard", "standard-latest"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "double"],
    "semi": ["error", "never"],
    "no-unused-vars": "off"
  }
}
